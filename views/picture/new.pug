extends ../layout

block content
    div(class="container")
        h2(class="page-header") Add a picture

        form(method="post")
            div(class="form-group")
                label(for="url") Url
                input(type="text" name="url" id="url" class="form-control js-add-picture" required value=(data.url ? data.url : ''))
                if errors.url
                    p(class="error") #{errors.url.message}

            div(class="form-group")
                div(class="js-picture thumbnail") Nothing to display
                span(class="glyphicon glyphicon-refresh js-refresh-picture")

            input(type="submit" class="btn btn-default js-submit" disabled)

        br
        a(href="/dashboard") Back to the list